	OperationRegion(PMU.BAR0, PCI_Config, 0x90, 0x2)
//	OperationRegion(PMU.BAR1, PCI_Config, 0x90, 0x2)

	Field(PMU.BAR0, ByteAcc, NoLock, Preserve){
			PMSB,16,
			}
