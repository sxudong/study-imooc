	Method(PMCN.PMBS,0) {	// update PWRB & SMBB only once in OS boot

	If(PWRB) {}
	Else {
	And(PMSB, 0xFFC0, PWRB)
//	And(SMSB, 0xFFC0, SMBB)
		}
	}

