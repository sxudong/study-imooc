	IRETCS		macro			; Simulate IRET when SS = CS
	
		local	iret_ip
		local	iret_cs
		local	iret_flag
		local	iretcs_end
		mov	cs:word ptr iret_cs,cs
		mov	sp,offset iret_ip
		iret
		even
	iret_ip:
		dw	offset iretcs_end
	iret_cs:
		dw	0000h
	iret_flag:
		dw	0000h
	iretcs_end:
	
	endm

;*****************************************************************************;

	CreateAPInfo	macro	xCount		; Create info data for AP
	  REPEAT	xCount

			local	end_info
			dw	offset end_info
			CPUINFOSTRUC {\
					0f0000000h,
					0f0000000h,
					00,
					00,
					0000,
					00000000,
					0000,
					00,
					0f0000000h,
					00,
					00,
					000000000h\
				      }
		end_info:
		
	  ENDM
	  	dw	0ffffh
	ENDM
					
;*****************************************************************************;
		
	CreateSMIInfo	macro	xCount		; Create SMI info for all CPUs
			
			SMIINFOHDRSTRUC { xCount }
			yCount = 0
			
	  REPEAT	xCount
	  
			SMIINFOSTRUC	{\
					   00,
					   yCount,
					   0000,
					   00000000,
					   00\
					}
			yCount = yCount+1
			
	  ENDM
	ENDM


;*****************************************************************************;

	CreateMPFP	macro	addr		; Create MP Floating Pointer
						; Table
			checksum = 0
	
			MPFPSTRUC	{\
					  '_MP_',
					  (addr+0f0000000h),
					  01h,
					  01h,
					  checksum,
					  01h,
					  00h,
					  00h,
					  00h,
					  00h\
					}
					
	ENDM




