	CallNS		macro	RoutAddr	; Simulate CALL when no stack
	
		local	AddrToReturn, PointerToSP
		mov	sp,offset PointerToSP
		jmp	RoutAddr
		even
	PointerToSP:
		dw	offset AddrToReturn
	AddrToReturn:

	endm
	
;*****************************************************************************;

	JmpDI		macro	RoutAddr
		local	AddrToReturn
		mov	di,offset AddrToReturn
		jmp	RoutAddr
	AddrToReturn:
	
	endm

