<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd  
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/aop 
        http://www.springframework.org/schema/aop/spring-aop.xsd">

    <context:component-scan base-package="com.myimooc.spring.simple.aop.schema"/>

    <!-- 视频：5-7 Advisors -->
    <aop:config>
        <aop:aspect id="concurrentOperationRetry" ref="concurrentOperationExecutor">
            <!-- 执行这个包下的所有方法都会被匹配到 -->
            <aop:pointcut id="idempotentOperation"
                          expression="execution(* com.myimooc.spring.simple.aop.schema.advisors.service.*.*(..)) "/>
            <!--            expression="execution(* com.myimooc.spring.simple.aop.schema.service.*.*(..)) and-->
            <!--            @annotation(com.myimooc.spring.simple.aop.schema.Idempotent)" />-->

            <!-- 引用上面的pointcut的id -->
            <aop:around pointcut-ref="idempotentOperation" method="doConcurrentOperation"/>
        </aop:aspect>
    </aop:config>

    <bean id="concurrentOperationExecutor"
          class="com.myimooc.spring.simple.aop.schema.advisors.ConcurrentOperationExecutor">
        <property name="maxRetries" value="3"/> <!-- 给属性设置尝试次数 -->
        <property name="order" value="100"/>    <!-- 给属性设置定义循序 -->
    </bean>

</beans>
